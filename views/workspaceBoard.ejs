    <div class="main-layout">
      <div class="leftside-nav">
        <div class="workspace-name" style="color:white;font-size:22px;">
          <%= data4[0].name%>
        </div>
        <div>
          <div class="left-items"><span><i class="fa-brands fa-flipboard"></i></span>Boards</div>  
          <div class="left-items"><span><i class="fa-brands fa-trello"></i></span>Templates</div>
          <div class="left-items"><span><i class="fa-solid fa-house"></i></span>Home</div>
        </div>
        <div class="workspace-views">
          Workspace views
        </div>
        <div class="workspace-view__items">
          <div class="views-items">
            <span><i class="fa-solid fa-table"></i>Table</span>
          </div>
          <div class="views-items">
            <span><i class="fa-solid fa-calendar-days"></i>Calendar</span>
          </div>
        </div>
        <div class="user-boards">
          <div class="workspace-views">Your boards</div>
          <% for( let i = 0; i < data.length; i++ ) { %>
          
          
          <div class="user-boards__items <%= data[i].id %> ">
            <img src="<%= data[i].boardBackgroundURL%>" alt="">
            <span><%= data[i].name%></span>
          </div>
          
          <% } %>
          
        </div>
      </div>
      <div class="rightside-layout">
        <div class="rightside-layout__title">
         <span style="color: white;font-size:20px; background-color:none;"><%= data[0].name %> </span> 
          <span><i class="fa-regular fa-star"></i></span>
          <span><i class="fa-solid fa-users"></i>Workspace visible</span>
          <span><i class="fa-solid fa-bolt"></i>Automation</span>
          <span><i class="fa-solid fa-rocket"></i>Power-Ups</span>
          <span><i class="fa-solid fa-filter"></i>Filter</span>
           <span class="add-a-list checked"><i class="fa-regular fa-plus"></i>Add another list</span>
          
        </div>
        <div class="cards-layout " id="cards-layout">
          <% for( let i = 0; i < data1.length; i++ ) { %>
          
          
          <div >
            
            
          <li class="cards <%= data1[i].id1 %> ">
            <div class="card-name">
               <%= data1[i].name %>  
            </div>

            <ul class="list-card-todo" id="list-card-todo">
              <% for( let j = 0; j < data3.length; j++ ) { %>
              
              
              <li class="card-todo <%= data3[j].id %> <%=data3[j].cardID %> ">
                <%=data3[j].name%>
              </li>
              <% } %> 
              
            </ul>
            <div class="cards-create"><i class="fa-regular fa-plus"></i>Add a card</div>
             </li>
             
           </div>
          
           
          
           <% } %>
          
                      
                 
         
         
     
        
         
